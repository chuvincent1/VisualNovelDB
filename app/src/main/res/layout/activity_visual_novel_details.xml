<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_visual_novel_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.vndatabase.visualnoveldb.VisualNovelDetailsActivity"
    android:orientation="vertical">

    <TextView
        android:text="Visual Novel Details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="25sp"
        android:textAlignment="center" />

    <TextView
        android:text="Visual Novel:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="20sp" />

    <TextView
        android:text="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textName"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="16sp" />

    <TextView
        android:text="Rating:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView9"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="20sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/ratingBar"
            android:numStars="5"
            android:stepSize="0.5"
            android:isIndicator="true"/>
    </RelativeLayout>

    <TextView
        android:text="Best Girl (if any):"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="20sp" />

    <TextView
        android:text="Best Girl Name Here"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textGirl"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="16sp" />

    <TextView
        android:text="Overall Thoughts:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="20sp" />

    <TextView
        android:text="Thoughts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textThoughts"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:textSize="16sp" />
</LinearLayout>
